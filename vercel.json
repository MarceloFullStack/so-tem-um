{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/upload",
        "methods": ["POST"],
        "dest": "api/upload.js",
        "config": {
          "fs": {
            "public": {
              "upload": true
            },
            "data.json": {
              "write": true
            }
          }
        }
      }
    ]
  }